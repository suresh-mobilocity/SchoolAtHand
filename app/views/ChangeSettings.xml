<Alloy>
	<Window id="changeOptionsWin" class="container" title="Change Settings">
		<ScrollView id="changeOptions">
				<View layout="horizontal"  height="Ti.UI.SIZE">
					<Label text="Display Ads"/> 
					<Switch id="displayAds"/>
				</View>
				<View layout="horizontal" height="Ti.UI.SIZE">
					<Label id="pushNotificationSelection"/>
				</View>
				<View layout="horizontal"  height="Ti.UI.SIZE">
					<Label text="Recieve School District Alerts"/>  
					<Switch id="recivePushFromSchools"/>
				</View>
				<View layout="horizontal"  height="Ti.UI.SIZE">
					<Label text="Recieve PTA Announcements"/>
	            	<Switch id="recivePushFromPTA"/>
	            </View>
	            <View layout="horizontal"  height="Ti.UI.SIZE">
	            	 <Label text="Recieve Sports Events"/>
	           	 	<Switch id="recivePushFromSports"/>
	            </View>
	            <View layout="vertical"  height="Ti.UI.SIZE">
	            	 <Button id="buttonSaveChanges"/>
	            	 <!--
	           		 <Button id="buttonChangeSchoolDistrict"/>
	           		 -->
	           		 <Button id="buttonResetPassword"/>
	           </View>
		</ScrollView>
	</Window>
</Alloy>